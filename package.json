{
  "name": "youtube-live-poll",
  "version": "1.0.4",
  "private": true,
  "description": "Create polls for YouTube Live Streaming",
  "author": {
    "name": "Eridanus Sora",
    "email": "sora@sound.moe"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "dev": "vue-cli-service electron:serve",
    "electron:build": "vue-cli-service electron:build",
    "electron:build-linux": "vue-cli-service electron:build --linux --publish never",
    "electron:build-macos": "vue-cli-service electron:build --mac --publish never",
    "electron:build-win": "vue-cli-service electron:build --win --publish never",
    "electron:generate-icons": "electron-icon-builder --input=./public/logo.png --output=build --flatten",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "release": "electron-builder --publish onTagOrDraft"
  },
  "main": "background.js",
  "dependencies": {
    "axios": "^0.18.1",
    "danmulive": "0.0.3",
    "echarts": "^4.2.1",
    "electron-log": "^3.0.5",
    "express": "^4.17.0",
    "express-ws": "^4.0.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "vue": "^2.6.6",
    "vue-echarts": "^4.0.3",
    "vuetify": "^1.5.5",
    "vuex": "^3.1.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.5.0",
    "@vue/cli-plugin-eslint": "^3.5.0",
    "@vue/cli-service": "^3.5.0",
    "babel-eslint": "^10.0.1",
    "css-loader": "^2.1.1",
    "electron": "^4.0.0",
    "electron-icon-builder": "^1.0.0",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "material-design-icons-iconfont": "^4.0.5",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "vue-cli-plugin-electron-builder": "^1.3.4",
    "vue-cli-plugin-vuetify": "^0.5.0",
    "vue-template-compiler": "^2.5.21",
    "vuetify-loader": "^1.0.5",
    "webpack": "^4.32.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
